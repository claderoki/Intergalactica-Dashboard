<h1>Items</h1>
<table class="table">

    <tr>
        <th scope="col col-lg-1" style="width:60px;" ></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <div style="float:right;">
            <%= link_to(new_item_path, :class => "btn btn-outline-success", :data => {style:"float:right;"}) do %>
                <i class="fas fa-plus"></i>
            <% end %>
        </div>
        </th>
    </tr>

  <% @items.each do |item| %>
    <tr>
        <td><img src="<%= item.image_url %>" width="50" height="50" class="d-inline-block align-top" alt=""> </td>
        <td><%= item.name %> </td>
        <td><%= item.description %> </td>
        <td>
            <%= link_to(edit_item_path(item.id), :class => "btn btn-outline-success", :data => {style:"float:right;"}) do %>
                <i class="fas fa-pencil-alt"></i>
            <% end %>
        </td>
    </tr>
  <% end %>
</table>
