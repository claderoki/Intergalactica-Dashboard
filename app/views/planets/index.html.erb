<h1>Planets</h1>
<table class="table">

    <tr>
        <th scope="col col-lg-1" style="width:60px;" ></th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col">
        <div style="float:right;">
        <%= link_to(new_planet_path, :class => "btn btn-outline-success", :data => {style:"float:right;"}) do %>
            <i class="fas fa-plus"></i>
        <% end %>
        </div>
        </th>
    </tr>

  <% @planets.each do |planet| %>
    <tr>
        <td><img src="<%= planet.image_url %>" width="50" height="50" class="d-inline-block align-top" alt=""></td>
        <td> <%= planet.name %> </td>
        <td> (<%= planet.locations.count %> Locations)</td>
        <td>
        <div style="float:right;">
            <%= link_to(edit_planet_path(planet), :class => "btn btn-outline-primary sm") do %>
                <i class="fas fa-pencil-alt"></i>
            <% end %>
            <%= link_to(planet, :class => "btn btn-outline-primary sm", :style => "display:none;") do %>
                <i class="far fa-eye"></i>
            <% end %>
            <%= link_to(planet_path(planet), :class => "btn btn-outline-danger", :data => { confirm: "Are you sure?" }) do %>
                <i class="fas fa-minus"></i>
            <% end %>
        </div>
        </td>
    </tr>
  <% end %>
</table>